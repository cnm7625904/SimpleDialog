<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:background="@drawable/bottom_menu"
        android:paddingBottom="8dp"
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/color_333"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_toutiao"
            android:textSize="12sp"
            android:text="转发到头条"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_333"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_wechat"
            android:textSize="12sp"
            android:text="微信"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_333"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_friendcircl"
            android:textSize="12sp"
            android:text="朋友圈"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_333"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_qq"
            android:textSize="12sp"
            android:text="QQ"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/color_333"
            android:gravity="center_horizontal"
            android:drawablePadding="10dp"
            android:drawableTop="@mipmap/icon_qqzone"
            android:textSize="12sp"
            android:text="QQ空间"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bottom_menu"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center_horizontal"
        android:text="取消"
        android:textSize="14sp"
        android:textColor="@color/color_333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
